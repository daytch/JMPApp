<Window x:Class="JMPApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JMPApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="572" Width="700">

    <Grid>

        <Border BorderBrush="Black" BorderThickness="1" Padding="5" HorizontalAlignment="Center" VerticalAlignment="Top"  Height="48" Width="640" Margin="0,20,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button Content="Customer" Width="125" Height="23" Margin="5" BorderBrush="Black" BorderThickness="1" Click="GoToCustomerPage"/>
                <Button Content="Barang" Width="125" Height="25" Margin="5" BorderBrush="Black" BorderThickness="1"/>
                <Button Content="Supplier" Width="125" Height="25" Margin="5" BorderBrush="Black" BorderThickness="1"/>
                <Button Content="Transaksi" Width="125" Height="25" Margin="5" BorderBrush="Black" BorderThickness="1"/>
            </StackPanel>
        </Border>
        
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </Grid>

</Window>
