<Window x:Class="JMPApp.AddCustomer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JMPApp"
        mc:Ignorable="d"
        Title="AddCustomer" Height="200" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Add New Customer" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
            <Label Content="Name:"/>
            <TextBox x:Name="NameTextBox"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Add" Click="AddButton_Click" Margin="5"/>
                <Button Content="Cancel" Click="CancelButton_Click" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
